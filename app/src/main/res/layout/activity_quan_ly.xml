<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuanLyActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobbar_quanly"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ff00dfff"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Quản lý sản phẩm">
        <ImageView
            android:id="@+id/img_them"
            android:src="@drawable/icon_add"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/toobbar_quanly"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/recycleview_ql"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>