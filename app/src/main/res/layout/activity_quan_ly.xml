<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuanLyActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobbar_quanly"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ff00dfff"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Quản lý sản phẩm">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/toobbar_quanly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <soup.neumorphism.NeumorphCardView
            android:id="@+id/neu_themsanpham"
            style="@style/neumorphimcard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toobbar_quanly"
            >
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_add" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thêm"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/holo_red_light"/>

            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>


        <soup.neumorphism.NeumorphCardView

            android:id="@+id/layout_email"
            style="@style/neumorphimcard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toobbar_quanly"
           >

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_auto_fix_normal_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sửa"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/holo_red_light"/>

            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>
        <soup.neumorphism.NeumorphCardView
            style="@style/neumorphimcard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toobbar_quanly">

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_delete" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xóa"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/holo_red_light"/>

            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>